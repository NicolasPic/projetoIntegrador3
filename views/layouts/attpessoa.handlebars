<form action="/routes/logado/salvar" method="POST">
   <input type="hidden" name="id" value="{{pessoa._id}}">
    <!-- Campo de Força -->
    <label for="forca">Força: </label>
    <input type="number" id="forca" name="forca" placeholder="Força" required>
    
    <!-- Campo de Velocidade -->
    <label for="velocidade">Velocidade: </label>
    <input type="number" id="velocidade" name="velocidade" placeholder="Velocidade" required>

     <label for="camp">Campeonato: </label>
    <input type="number" id="camp" name="camp" placeholder="Camp" required>
    
    
    <button type="submit" class="btn btn-success">Salvar</button>
</form>



